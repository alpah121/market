<div class="container">
	<div class="row" style="color: green;">
	{{successMessage}}
	</div>
	<div class="row">
		<button type="button" href="#newMessage" class="btn btn-success">Create Message</button>
	</div>
	{{#each messages}}
	<div class="row">
	<h2>{{title}}</h2>
	<small class="text-muted">From {{from}}</small><button type="button" class="btn btn-danger" onclick="deleteMessage({{id}})">Delete Message</button>
	<p>{{body}}</p>
	</div>
	{{/each}}
	<div class="row">
		<form action="/message/new" method="post">
			
			<label for="to">Enter the name of the recipient</label>
			<input type="text" class="form-control" id="to" name="toUser"/>
			
			<label for="title">Enter the Title</label>
			<input type="text" class="form-control" id="title" name="title"/>
			
			<label for="body">Enter your message</label>
			<input type="text" class="form-control" id="body" name="body"/>
			
			<button type="submit" class="btn btn-primary">Send</button> 
			
		</form>
	</div>
</div>
